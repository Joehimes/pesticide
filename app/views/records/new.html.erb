<h1>New Record</h1>

<h3><%= current_user.name %></h3>

<%= form_with model: @record do |f| %>

    <%= f.label :date %>
    <%= f.date_field :date %><br>

    <%= f.label :location %>
    <%= f.text_field :location %><br>

    <%= f.label :location_type %>
    <%= f.text_field :location_type %><br>

    <%= f.label :location_size %>
    <%= f.text_field :location_size %><br>

    <%= f.label "Chemical Name" %>
    <%= f.select :chemical, @chemicals.collect { |c| [c.name, c.id] } %><br>

    <%= f.label :chem_amount %>
    <%= f.number_field :chem_amount %><br>

    <%= f.label :equipment %>
    <%= f.text_field :equipment %><br>

    <%= f.label :start_time %>
    <%= f.text_field :start_time %><br>

    <%= f.label :stop_time %>
    <%= f.text_field :stop_time %><br>

    <%= f.label :wind_direction %>
    <%= f.text_field :wind_direction %><br>

    <%= f.label :wind_velocity %>
    <%= f.number_field :wind_velocity %><br>

    <%= f.label :temperature %>
    <%= f.number_field :temperature %><br>

    <%= f.submit %>

<% end %>